<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1ccc0"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="321dp"
        android:layout_height="86dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/btn_height"
        android:src="@drawable/main_logo"
        tools:srcCompat="@drawable/main_logo" />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/space20"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/space20"
            android:background="@drawable/btn_white_selector"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#dc1616"
            android:textSize="@dimen/txt16" />

        <Button
            android:id="@+id/btn_sign_in"
            android:background="@drawable/bg_btn_red"

            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/space20"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt16" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/iv_logo"
        android:layout_marginStart="@dimen/space40"
        android:layout_marginLeft="@dimen/space40"
        android:layout_marginTop="@dimen/space40"
        android:layout_marginEnd="@dimen/space40"
        android:layout_marginRight="@dimen/space40"
        android:layout_marginBottom="@dimen/space40"
        android:text="Measure your success across all channels"
        android:textColor="#dc1616"
        android:textSize="@dimen/txt30"
        android:textStyle="bold" />


</RelativeLayout>